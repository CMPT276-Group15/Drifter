<body class="userBody">
<% provide(:title, @user.name) %>
 
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      
      
    </section>
     
  </aside>
  
</div>

<!--Map-->
<div>

	<p style="height: 400px; width: 1000px"> Insert Map </p>

</div>

<!--Write posts-->
<section class="stats">
        <%= render 'shared/stats' %> 
        </section> 
      <section class="micropost_form"> 
      <%= render 'shared/micropost_form' %> 
</section> 

<!--Render posts-->
<div class="col-md-8"> 
<%= render 'follow_form' if logged_in? %>
<h3>Journal</h3> 
  <p>
  <%= render 'shared/feed' %> 
  
  </p>
</div> 

<!--Admin detection-->
<% if current_user.admin? %>
  <h1> USER IS ADMIN </h1>
<% else %>
  <h1> USER IS REGULAR USER </h1>
<% end %>


</body>
