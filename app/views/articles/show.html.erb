
<div id="articleWrapper">
<h2 id="titlebubble">
  <strong>
  <%= @article.title %>
  </strong>
</h2>

<p id="textbubble">
  <%= @article.text %>
</p>
</div>


<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
