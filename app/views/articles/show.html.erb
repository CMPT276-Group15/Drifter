<div class="well col-md-15 col-xs-offset-0">
  <div id="articleWrapper">
    <h2 id="titlebubble">
      <strong>
      <%= @article.title %>
      </strong>
    </h2>
  
    <div class="article-body">
      <p id="textbubble">
        <%= @article.text %>
      </p>
    </div>
    
  </div>
  
  <br><br>
  <h2>Comments</h2>
  <hr>
  <%= render @article.comments %>
  
  <h2>Add a comment:</h2>
  <%= render 'comments/form' %>

  <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-xs btn-warning" %> | <%= link_to 'Back', articles_path, class: "btn btn-xs btn-warning" %>
</div>

